<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextAppearance.ArialNarrowBoldItalic" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow_bold_italic</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Base.TextAppearance.RobotoRegular" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.ArialNarrow" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.ArialNarrowBold.White" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow_bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.RobotoRegular.Manatee" parent="Base.TextAppearance.RobotoRegular">
        <item name="android:textColor">@color/colorManatee</item>
    </style>

    <style name="TextAppearance.RobotoRegular.White" parent="Base.TextAppearance.RobotoRegular">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextAppearance.ArialNarrow.GrayChateau" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow</item>
        <item name="android:textColor">@color/colorGrayChateau</item>
    </style>

    <style name="TextAppearance.ArialNarrowBoldItalic.Black" parent="Base.TextAppearance.ArialNarrowBoldItalic">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextAppearance.ArialNarrowBoldItalic.Aquamarine" parent="Base.TextAppearance.ArialNarrowBoldItalic">
        <item name="android:textColor">@color/colorAquamarine</item>
    </style>

    <style name="TextAppearance.MontserratSemiBold.Black" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.MontserratSemiBold.GrayChateau" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/colorGrayChateau</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>