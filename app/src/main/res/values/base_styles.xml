<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.ArialNarrow" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow</item>
    </style>

    <style name="TextAppearance.ArialNarrow.GrayChateau" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/arial_narrow</item>
        <item name="android:textColor">@color/colorGrayChateau</item>
    </style>

    <style name="Base.Button.BordLess" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:height">40dp</item>
        <item name="android:background">@drawable/background_custom_button</item>
    </style>
</resources>